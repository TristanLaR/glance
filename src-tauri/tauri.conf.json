      "identifier": "com.glance.app",
      "icon": []
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Glance",
        "width": 900,
        "height": 700
      }
    ]
  }
}
