{
  "build": {
    "distDir": "../ui",
    "devPath": "../ui",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "package": {
    "productName": "glance",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "open": true
      },
      "globalShortcut": {
        "all": true
      }
    },
    "bundle": {
